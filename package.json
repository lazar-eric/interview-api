{
  "name": "@deel/mini-api",
  "version": "1.0.0",
  "description": "Interview deel mini API",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lazar-eric/interview-deel-api.git"
  },
  "author": "Lazar Eric",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lazar-eric/interview-deel-api/issues"
  },
  "homepage": "https://github.com/lazar-eric/interview-deel-api#readme",
  "scripts": {
    "dev": "cross-env NODE_PATH=./src NODE_ENV=local nodemon ./src/index.ts",
    "start": "cross-env NODE_ENV=production node ./build",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint -c tslint.json --project tsconfig.json 'src/**/*.{ts,tsx}'",
    "type": "tsc --noEmit",
    "cov": "cross-env NODE_PATH=./src NODE_ENV=test amaui-test",
    "test": "yarn lint && yarn type && yarn build && yarn cov",
    "docker": "docker-compose -p 'deel' up -d",
    "aws": "cross-env AWS_ACCESS_KEY_ID=deel AWS_SECRET_ACCESS_KEY=deel aws s3 mb s3://deel --endpoint-url http://localhost:4566",
    "aws-test": "cross-env AWS_ACCESS_KEY_ID=deel AWS_SECRET_ACCESS_KEY=deel aws s3 mb s3://deel-test --endpoint-url http://localhost:7566",
    "postdocker": "sleep 1 && yarn aws ; yarn aws-test"
  },
  "dependencies": {
    "@amaui/api": "^1.0.38",
    "@amaui/date": "^1.1.8",
    "@amaui/errors": "^1.0.111",
    "@amaui/models": "^1.1.18",
    "@amaui/utils": "^1.1.17",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.6",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1"
  }
}
