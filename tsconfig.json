{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "target": "ES2015",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
